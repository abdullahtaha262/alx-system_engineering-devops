#!/bin/bash
# Initialize an empty array to act as a stack                               declare -a directory_stack

# Function to change to the previous directory
function change_to_previous_directory() {
    # Check if the stack is empty                                               if [[ ${#directory_stack[@]} -eq 0 ]]; then                                     echo "No previous directory to switch to."                              else
        # Pop the last directory from the stack
        previous_dir="${directory_stack[-1]}"
        directory_stack=("${directory_stack[@]:0:${#directory_stack[@]}-1
}")

        # Change to the previous directory
        cd "$previous_dir"
        echo "Changed to previous directory: $previous_dir"
    fi
}

# Main loop
while true; do
    read -p "Enter a command (cd, back, exit): " command

    case "$command" in
        "cd")                                                                           read -p "Enter a directory path: " dir_path                                 if [[ -d "$dir_path" ]]; then                                                   directory_stack+=("$PWD")                                                   cd "$dir_path"
                echo "Changed to directory: $dir_path"                                  else                                                                            echo "Directory not found: $dir_path"                                   fi                                                                          ;;
        "back")                                                                         change_to_previous_directory
            ;;
        "exit")
            break
            ;;
        *)
            echo "Invalid command"
            ;;
    esac
done
